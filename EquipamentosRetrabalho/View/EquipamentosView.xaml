<UserControl x:Class="EquipamentosRetrabalho.View.EquipamentosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:EquipamentosRetrabalho.ViewModel">

    <UserControl.DataContext>
        <vm:EquipamentosViewModel />
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Pesquisar por:" VerticalAlignment="Center" Margin="0,0,10,0"/>

            <ComboBox Width="150"
              ItemsSource="{Binding FiltrosDisponiveis}"
              SelectedItem="{Binding FiltroSelecionado}"
              Margin="0,0,10,0"/>

            <TextBox Width="200"
             Text="{Binding FiltroPesquisa, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Equipamentos}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  FontSize="17">
            <DataGrid.Columns>
                <DataGridTextColumn Header="OM" Binding="{Binding OrdemMontagem}" />
                <DataGridTextColumn Header="OV" Binding="{Binding OrdemVenda}" />
                <DataGridTextColumn Header="Item" Binding="{Binding ItemVenda}" />
                <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" />
                <DataGridTextColumn Header="Equipamento" Binding="{Binding EquipamentoNome}" />
                <DataGridTextColumn Header="Qtd Total" Binding="{Binding QuantidadeTotal}" />
                <DataGridTextColumn Header="Reprovado" Binding="{Binding Reprovado}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
                <DataGridTextColumn Header="Defeito" Binding="{Binding Defeito}" />
                <DataGridTextColumn Header="Data" Binding="{Binding Data}" />
                <DataGridTextColumn Header="Local" Binding="{Binding Local}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
