<Window x:Class="EquipamentosRetrabalho.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Controle de Equipamentos" 
        Height="600" Width="1000"
        Background="#ffffff"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="207*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#000714" BorderBrush="#A1020F" BorderThickness="0,0,0,3" Grid.ColumnSpan="2">
            <DockPanel VerticalAlignment="Center">
                <Image Source="Imagens/logoSEW.png" DockPanel.Dock="Left" Margin="50,0,0,0"/>
                <DockPanel>
                    <Grid>
                        <TextBlock Text="Controle de Retrabalho"
                   Foreground="White"
                   FontSize="24"
                   FontWeight="ExtraBold"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"/>
                    </Grid>
                </DockPanel>

            </DockPanel>
        </Border>

        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#000714" BorderBrush="#2C2C2C" BorderThickness="0,0,2,0">
                <StackPanel>
                    <StackPanel.Resources>

                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#A1020F"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="Height" Value="45"/>
                            <Setter Property="Margin" Value="20,10,20,5"/>
                            <Setter Property="BorderBrush" Value="#70010A"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6"
                                                SnapsToDevicePixels="True">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>

                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#70010A"/>
                                                <Setter Property="Foreground" Value="Gray"/>

                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </StackPanel.Resources>

                    <Button Content="Equipamentos" Click="AbrirEquipamentos_Click" Margin="20,20,20,8"/>
                    <Button Content="Estatísticas" Click="AbrirEstatisticas_Click"/>
                </StackPanel>
            </Border>

            <ContentControl x:Name="ConteudoPrincipal" Grid.Column="1" Margin="15"/>
        </Grid>
    </Grid>
</Window>
