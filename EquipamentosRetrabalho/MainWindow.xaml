<Window x:Class="EquipamentosRetrabalho.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EquipamentosRetrabalho.View"
        Title="Controle de Equipamentos" Height="600" Width="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1A1A1A" Padding="10">
            <DockPanel VerticalAlignment="Center">
                <Image Source="Imagens/logoSEW.png" Width="80" DockPanel.Dock="Left" Margin="0,0,10,0"/>
                <TextBlock Text="Controle de Equipamentos"
                   Foreground="#CCCCCC"
                   FontSize="22"
                   VerticalAlignment="Center" />
            </DockPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="54.073"/>
                <ColumnDefinition Width="145.927"/>
                <ColumnDefinition Width="193*"/>
                <ColumnDefinition Width="607*"/>
            </Grid.ColumnDefinitions>

            <!-- Menu lateral -->
            <StackPanel Background="#1A1A1A" Grid.Column="0" Grid.ColumnSpan="2">
                <Button Background="#A1020F"  FontWeight="ExtraBold" FontSize="15" Content="Equipamentos" Margin="10" Height="40" Click="AbrirEquipamentos_Click"/>
                <Button Background="#A1020F"  FontWeight="ExtraBold" FontSize="15" Content="Estatísticas" Margin="10" Height="40" Click="AbrirEstatisticas_Click"/>
            </StackPanel>

            <!-- Tela dinâmica -->
            <ContentControl x:Name="ConteudoPrincipal" Grid.Column="2" Grid.ColumnSpan="2"/>
        </Grid>
    </Grid>
</Window>
